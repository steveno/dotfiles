# grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Use neovim
alias vi='nvim'
alias vim='nvim'

# ls
alias ls='ls --color -F'
alias l='ls --color -F'
alias ll='ls --all -lF'

# less
alias less='less -r'

# Make checking tarnsap easier
alias check-tarsnap='sudo tarsnap --list-archives | sort'
